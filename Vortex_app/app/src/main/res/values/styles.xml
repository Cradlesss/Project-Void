<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom Dialog Theme -->
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/AccentColor</item>
        <item name="colorAccent">@color/roundedButtonColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:backgroundDimAmount">0.8</item> <!-- Dim the background -->
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/button_background_with_outline</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:elevation">10dp</item>
        <item name="android:itemTextAppearance">@style/PopupMenuTextStyle</item>
    </style>

    <style name="PopupMenuTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/secondaryTextColor</item>
    </style>


</resources>
